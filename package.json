{
  "name": "react-chat-widget",
  "version": "3.2.0",
  "description": "Chat web widget for React apps",
  "main": "lib/index.js",
  "repository": "git@github.com:ryaneewx/react-chat-widget.git",
  "author": "Ryan Ee <ryanee@gmail.com>",
  "license": "MIT",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "webpack serve --config webpack.config.dev.js",
    "build": "webpack --config ./webpack.config.prod.js",
    "test": "jest --coverage"
  },
  "keywords": [
    "react",
    "chat",
    "widget",
    "javascript"
  ],
  "dependencies": {
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "emoji-mart": "^5.5.2",
